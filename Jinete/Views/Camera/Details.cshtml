@using Resources
@model Jinete.ViewModels.CameraViewModel

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Camera</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model._camera.EquipmentName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model._camera.EquipmentName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model._camera.SerialNumber)
        </dt>

        <dd>
            @Html.DisplayFor(model => model._camera.SerialNumber)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model._camera.PurchasePrice)
        </dt>

        <dd>
            @Html.DisplayFor(model => model._camera.PurchasePrice)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model._camera.Discarded)
        </dt>

        <dd>
            @Html.DisplayFor(model => model._camera.Discarded)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model._camera.LostOrStolen)
        </dt>

        <dd>
            @Html.DisplayFor(model => model._camera.LostOrStolen)
        </dd>

    </dl>

    <h4>User Information</h4>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model._camera.ApplicationUser.UserName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model._camera.ApplicationUser.FirstName) @Html.DisplayFor(model => model._camera.ApplicationUser.LastName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model._camera.ApplicationUser.Address)
        </dt>

        <dd>
            @Html.DisplayFor(model => model._camera.ApplicationUser.Address)
        </dd>


        <dt>

        </dt>

        <dd>
            @Html.DisplayFor(model => model._camera.ApplicationUser.City), @Html.DisplayFor(model => model._camera.ApplicationUser.State) @Html.DisplayFor(model => model._camera.ApplicationUser.Zip)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model._camera.ApplicationUser.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model._camera.ApplicationUser.Email)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model._camera.ApplicationUser.Phone)
        </dt>

        <dd>
            @Html.DisplayFor(model => model._camera.ApplicationUser.Phone)
        </dd>

    </dl>

    <h4>Checkout Information</h4>
    <hr />

    @if (Model._lastcheckout != null)
    {
        <table class="table">
            <tr>
                <th>
                    @Equipment.UserName
                </th>
                <th>
                    @Equipment.CheckedOut
                </th>
                <th>
                    @Equipment.CheckedIn
                </th>
            </tr>

            @foreach (var item in Model._camera.Checkouts)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ApplicationUser.FirstName) @Html.DisplayFor(modelItem => item.ApplicationUser.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.dtCheckedOut)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.dtReturned)
                    </td>
                </tr>
            }
        </table>
    }
    else
    {
        <p>This item has not been checked out.</p>
    }

    @if (Model._sold != null)
    {
        <h4>Sale Information</h4>
        <hr />
        <table>
            <tr>
                <th>Sold on</th>
                <th>Amount</th>
            <tr>
                <th>
                    @Html.DisplayFor(model => model._camera.Sale.dtSold)
                </th>
                <th>
                    @Html.DisplayFor(model => model._camera.Sale.SalePrice)
                </th>
            </tr>
        </table>
    }

</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model._camera.CameraId }) |
    @Html.ActionLink("Back to List", "Index")
</p>